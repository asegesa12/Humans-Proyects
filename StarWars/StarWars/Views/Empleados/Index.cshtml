@model IEnumerable<StarWars.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="post">

<input type="text" name="busqueda" placeholder="Buscar:" />
<input type="submit" value="buscar" class="btn-default" />

</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Carg.nombrecargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Depto.nombredepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Carg.nombrecargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depto.nombredepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CodigoEmpleado }) |
                @Html.ActionLink("Details", "Details", new { id = item.CodigoEmpleado }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CodigoEmpleado })
            </td>
        </tr>
    }

</table>
